<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="#40FFFFFF">

        <!-- 캐릭터 이름 -->
        <TextView
            android:id="@+id/characterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/dunggeunmo"
            android:text="모찌"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"/>

        <!-- 경험치 바 -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:max="100"
            android:progress="25"
            android:layout_gravity="center_vertical" />
            <!-- setProgress() 로 값 바꿀 수 있음 -->

        <!-- 보유한 코인 -->
        <TextView
            android:id="@+id/userCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/dunggeunmo"
            android:layout_margin="5dp"
            android:text="500C"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="center_vertical" />

        <!-- 날씨 : 추후 날씨 정보에 따라 업데이트 예정 -->
        <ImageView
            android:id="@+id/notiBtn"
            android:onClick="onStartForegroundService"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/weather_sun"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <!-- 캐릭터 출력 -->
    <!-- 1초마다 사진 변경? (숨쉬기 표현) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" >

        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/character_bear_11" />

    </RelativeLayout>


    <!-- 메뉴 출력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#B3FFFFFF" >

        <ImageButton
            android:id="@+id/homeBtn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_raise"/>

        <!--포그라운드 서비스 연결-->
        <ImageButton
            android:id="@+id/homeBtn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_walk"/>

        <ImageButton
            android:id="@+id/homeBtn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_mission"/>
    </LinearLayout>


</LinearLayout>